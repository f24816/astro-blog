---
import HeaderLink from './HeaderLink.astro';
---
<header>
	<nav>
		<div class="burger">
			<a><img src="/hamburger.svg" alt=""></a>
		</div>
		<div class="title-links">
			<HeaderLink href="/" class="title hover:text-[#f24816]">Andrei Valentin</HeaderLink>
			<div class="links pt-[2px]">
				<HeaderLink href="/about">about</HeaderLink>
				<HeaderLink href="https://form.jotform.com/231973723081356">contact</HeaderLink>
				<HeaderLink href="/portfolio">portfolio</HeaderLink>
				<HeaderLink href="/resources">resources</HeaderLink>
			</div>
		</div>
		<div class="center-title">
			<HeaderLink href="/" class="title hover:text-[#f24816]">Andrei Valentin</HeaderLink>
		</div>
		<div class="icons-container pt-[2px]">
			<div class="icons">
				<a href="https://media.tenor.com/O5as23V0QaMAAAAC/baby-sun-teletubbies.gif"><img src="/light_mode.svg" alt=""></a>
				<a href="/rss.xml"><img src="/rss.svg" alt=""></a>
				<a href="https://www.instagram.com/f24816/" target="_blank"><img src="/insta.svg" alt=""></a>
			</div>
		</div>
	</nav>
</header>
<div class="burger-menu">
	<HeaderLink href="/about">about</HeaderLink><br>
	<HeaderLink href="https://form.jotform.com/231973723081356">contact</HeaderLink><br>
	<HeaderLink href="/portfolio">portfolio</HeaderLink><br>
	<HeaderLink href="/resources">resources</HeaderLink><br>
</div>

<style>
	@import url('https://fonts.googleapis.com/css2?family=JetBrains+Mono:wght@400;500;600;700&display=swap');

	header{
		position: sticky;
		top: 0;
		left: 0;
		z-index: 1000;
		width: 100%;
		background: #0e0e0f;
		border-bottom: 1px solid #2e2e2e;
		overflow: auto;
	}
	nav {
		font-family: 'Inter', sans-serif;
		/* font-family: 'JetBrains Mono', monospace; */
		display: flex;
		font-weight: 500;
		/* align-content: center;
		align-items: center; */
		padding: 0.9rem 1.2rem;
	}
	.links {
		flex: 7;
		display: flex;
		justify-content: left;
		font-size: 14px;
	}
	.links a {
		margin-left: 1.5rem;
	}
	.title-links {
		flex: 1;
		display: flex;
		justify-content: left;
		white-space: nowrap;
		overflow: hidden;
	}
	.title {
		font-weight: 700;
		font-size: 17px;
	}
	.center-title {
		flex: 1;
		display: flex;
		justify-content: center;
		white-space: nowrap;
		display: none;
	}
	.icons-container {
		flex: 1;
		display: flex;
		justify-content: right;
	}
	.logo {
		display: grid;
		grid-template-columns: repeat(1, 1fr);
	}
	.logo img {
		width: 20px;
		height: 20px;
	}
	.icons {
		display: grid;
		grid-template-columns: repeat(3, 1fr);
  		grid-gap: 10px;
	}
	.icons a {
		height: 18px;
	}
	.icons img {
		width: 18px;
		height: 18px;
	}
	.icons img:hover {
		cursor: pointer;
		filter: opacity(60%);
	}
	.burger img {
		width: 18px;
		height: 18px;
	}
	.burger img:hover {
		cursor: pointer;
		filter: opacity(60%);
	}
	.burger {
		display: none;
		position: absolute;
		top: 1rem;
	}
	@media (max-width: 1300px) {
		.icons-container {
			display: right;
			position: absolute;
			right: 1.2rem;
		}
		.title-links {
			display: none;
		}
		.center-title {
			display: flex;
		}
		.links {
			display: none;
		}
		.burger {
			display: block;
		}
	}

	@media (orientation: portrait) {
		.title-links {
			display: none;
		}
		.center-title {
			display: flex;
		}
		.icons-container {
			display: none;
		}
		.burger {
			display: block;
		}
	}
	.burger-menu {
		display: none;
		background: #111112;

		position: fixed;
		top: 3.7rem;
		left: 0.5rem;
		z-index: 101;
		width: 6rem;
		border-radius: 5px;

		text-align: left;
		padding-top: 1rem;
		padding-bottom: 1rem;
		padding-left: 1.2rem;

		font-family: 'Inter', sans-serif;
		font-weight: 500;
		font-size: 15px;
		color: #888;
		line-height: 2;
		border: 1px solid #222;
	}


</style>
<script>
	// querry class burger
	const burger = document.querySelector(".burger")
	const menu: HTMLElement = document.querySelector(".burger-menu") as HTMLDivElement;
	if (burger) {
		// toggle burger menu display on click
		const burger = document.querySelector(".burger");
		const menu = document.querySelector(".burger-menu") as HTMLElement | null;
		if (burger && menu) {
			burger.addEventListener("click", () => {
				if (menu.style.display === "none" || !menu.style.display) {
					menu.style.display = "block";
				} else {
					menu.style.display = "none";
				}
			});
		}
	}

	// if i click ousite menu or burger and menu is open, close menu
	window.addEventListener('click', function(e){
	if (!menu!.contains(e.target as Element) && (!burger!.contains(e.target as Element))){
		menu!.style.display = "none";
	}
	});

	// hide menu on resize
	window.addEventListener('resize', function(e){
		if (window.innerWidth > 600) {
			menu!.style.display = "none";
		}
	});
</script>