---
import Header from '../components/Header.astro';
import { SITE_TITLE} from '../consts';
import { getCollection } from 'astro:content';
import FormattedDate from '../components/FormattedDate.astro';
import BaseHead from '../components/BaseHead.astro';

const posts = (await getCollection('blog')).sort(
	(a, b) => b.data.date.valueOf() - a.data.date.valueOf()
);
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE}/>

	</head>
	<body>
		<Header />
		<main>
			<section>
				<div class="flex justify-left items-end">
					<h1>Articles </h1><h1 class="text-[#5F5F5F] pl-3"> / All</h1>
				</div>
				<ul>
					{
						posts.map((post) => (
							<li>
								<a class="container" href={`/blog/${post.slug}/`}>
									<div class="gradient">
										<img width={720} height={360} src={post.data.image} alt="" />
									</div>
								</a>
								<div class="data flex justify-between">
									<div class="flex">
										<p class="date m-0">
										<FormattedDate date={post.data.date} />
										</p>
										<p class="px-2 m-0">&#8226;</p>
										<p class="uppercase m-0">
										{post.data.category}
										</p>
									</div>
									<!--
									<p class="m-0">
									{post.data.timetoRead}
									</p>
									-->
								</div>
								<a href={`/blog/${post.slug}/`}>
									<h4 class="title">{post.data.title}</h4>
								</a>
							</li>
						))
					}
				</ul>
			</section>
		</main>
	</body>
</html>

<style>
	a {
		color: #e6e5e5;
	}
	h1 {
		font-size: 2.2rem;
		font-weight: 700;
	}
	ul {
		font-family: 'Inter', sans-serif;
		display: flex;
		flex-wrap: wrap;
		gap: 2rem;
		list-style-type: none;
		margin: 0;
		padding: 0;
		padding-bottom: 40px;
	}
	ul img {
		box-shadow: #111111aa 0px 0px 10px 3px;
		aspect-ratio: 16/9;
		object-fit: cover;
		height: 100%;
	}
	ul li a {
		display: block;
		color: #e6e5e5 !important;
	}
	.title {
		font-size: 1.5rem;
		font-weight: 600;
		margin: 0;
		line-height: 1.3;
	}
	.data {
		position: relative;
		top: -2.1rem;
		margin: 0px 16px;
		margin-bottom: -5px;
		color: #C3C3C3;
	}
	.gradient {
		position:relative;
	}
	.gradient::after {
		content: '';
		border-radius: 2px;
		position: absolute;
		left: 0; top: -4px;
		width: calc(100%); height: 100%;
		background: linear-gradient(0deg, #000000cc 0%, #00000022 45%, #ffffff00 60%);
	}

	@media screen and (max-width: 400px) {
		h1 {
			font-size: 1.8rem;
		}
		ul {
			gap: 2rem;

		}
		.title {
			font-size: 1.3rem;
		}
		.data {
			font-size: 12px;
		}
	}
</style>